{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
    },
    "comment": {
      "type": "string"
    },
    "answer": {
      "type": "string",
      "pattern": "^(?i)(approve|decline)$"
    }
  },
  "required": ["id", "comment", "answer"]
}
